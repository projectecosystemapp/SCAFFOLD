name: Link Check (README + Docs)

on:
  push:
    branches: [ "main" ]
    paths:
      - "README.md"
      - "docs/**"
      - "CHANGELOG.md"
      - "SECURITY.md"
      - "SUPPORT.md"
      - "CONTRIBUTING.md"
  schedule:
    - cron: "0 9 * * 1" # Mondays 09:00 UTC
  workflow_dispatch: {}

jobs:
  lychee:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4
      - name: Link Checker
        uses: lycheeverse/lychee-action@v1
        with:
          args: >
            --verbose
            --no-progress
            --accept 200,206,429
            --exclude-all-private
            README.md CHANGELOG.md SECURITY.md SUPPORT.md CONTRIBUTING.md
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
