    id: problem
    attributes:
      label: Problem
      description: What problem are you trying to solve?
    validations:
      required: true
  - type: textarea
    id: proposal
    attributes:
      label: Proposal
      description: What would you like to see happen?
    validations:
      required: true
  - type: textarea
    id: impact
    attributes:
      label: Impact
      description: Who benefits and how do we measure success?
