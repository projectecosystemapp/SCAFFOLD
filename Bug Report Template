name: Bug Report
description: Problems with the public website or documentation
title: "[Bug] <short summary>"
labels:
  - bug
body:
  - type: textarea
    id: description
    attributes:
      label: What happened?
      description: Describe the problem and what you expected to happen.
      placeholder: Clear, reproducible description
    validations:
      required: true
  - type: textarea
    id: steps
    attributes:
      label: Steps to reproduce
      placeholder: "1) Go to…\n2) Click…\n3) See…"
  - type: input
    id: url
    attributes:
      label: Affected URL (if applicable)
      placeholder: https://specdriver.dev/...
  - type: textarea
    id: context
    attributes:
      label: Additional context / screenshots
